
{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "codebase": "default"
  },
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1",
      "serviceId": "hairconnect-db"
    },
    "rewrites": [
      {
        "source": "/__/auth/**",
        "firebase": {
          "projectId": "hairconnect-db",
          "function": "ssr-hairconnect-db"
        }
      }
    ]
  }
}
