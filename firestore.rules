
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admins have full access to everything
    match /{document=**} {
      allow read, write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Products can be read by anyone
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == resource.data.sellerId;
    }
    
    // Sellers can be read by anyone
    // Sellers can only write to their own document
    match /sellers/{sellerId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == sellerId;
    }
    
    // Buyers can be read by anyone
    match /buyers/{buyerId} {
      allow read: if true;
    }

    // Quote requests are private between participants
    match /quote-requests/{requestId} {
        allow read, write: if request.auth != null && (request.auth.uid == resource.data.sellerId || request.auth.uid == resource.data.buyerId);
        allow create: if request.auth != null;
    }

    // Contact messages are write-only for users
    match /contact-messages/{messageId} {
        allow create: if true;
    }

    // Sourcing requests can be read by anyone, but only written by admins
    match /sourcing-requests/{requestId} {
        allow read: if true;
        allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
  }
}
